        Text="&#xe83f;" />
    <TextBlock
        x:Key="BatteryStatusCharging"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe85a;" />
    <TextBlock
        x:Key="BatteryStatusChargingCritical"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe85b;" />
    <TextBlock
        x:Key="BatteryStatusChargingLow"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe85d;" />
    <TextBlock
        x:Key="BatteryStatusChargingMedium"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe860;" />
    <TextBlock
        x:Key="BatteryStatusChargingHigh"
        FontFamily="Segoe Fluent Icons"
