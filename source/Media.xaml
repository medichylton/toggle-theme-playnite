    <TextBlock
        x:Key="DetailsBatteryStatusChargingCritical"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe85b;" />
    <TextBlock
        x:Key="DetailsBatteryStatusChargingLow"
        FontFamily="Segoe Fluent Icons"
