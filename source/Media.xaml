    <TextBlock
        x:Key="DetailsBatteryStatusLow"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe854;" />
    <TextBlock
        x:Key="DetailsBatteryStatusMedium"
        FontFamily="Segoe Fluent Icons"
        Text="&#xe857;" />
    <TextBlock
        x:Key="DetailsBatteryStatusHigh"
        FontFamily="Segoe Fluent Icons"
