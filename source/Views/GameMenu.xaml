<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style
        x:Key="GameMenuButton"
        BasedOn="{StaticResource {x:Type ButtonEx}}"
        TargetType="ButtonEx">
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style x:Key="GameMenuBorder" TargetType="Border">
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Width" Value="400" />
        <Setter Property="Background" Value="{DynamicResource OverlayMenuBackgroundBrush}" />
        <Setter Property="CornerRadius" Value="16" />
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="315"
                    Opacity="0.5"
                    ShadowDepth="5"
                    Color="Black" />
            </Setter.Value>
        </Setter>
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style
        x:Key="GameMenuHeaderText"
        BasedOn="{StaticResource TextBlockBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="VerticalAlignment" Value="Bottom" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Padding" Value="16,0,16,16" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <DataTemplate x:Key="GameMenuHeaderTemplate">
        <TextBlock Style="{DynamicResource GameMenuHeaderText}" Text="{Binding Name}" />
    </DataTemplate>

    <DataTemplate x:Key="GameMenuPlayButtonTemplate">
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Width="25"
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="{DynamicResource FontIcoFont}"
                FontSize="{DynamicResource FontSizeSmall}"
                Text="&#xec74;" />
            <TextBlock VerticalAlignment="Center" Text="{Binding}" />
        </StackPanel>
    </DataTemplate>

