<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Style x:Key="ListGameItemStyle" TargetType="ListBoxItem">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="FocusedOn">
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleX"
                                From="1"
                                To="1.125"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleY"
                                From="1"
                                To="1.125"
                                Duration="0:0:0.1" />
                        </Storyboard>
                        <Storyboard x:Key="FocusedOff">
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleX"
                                From="1.125"
                                To="1"
                                Duration="0:0:0.2" />
                            <DoubleAnimation
                                Storyboard.TargetName="ScaleTransform"
                                Storyboard.TargetProperty="ScaleY"
                                From="1.125"
                                To="1"
                                Duration="0:0:0.2" />
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Grid
                        Margin="{Settings FullscreenItemSpacingMargin}"
                        d:DataContext="{x:Static DesignMainViewModel.DesignSelectedGameIntance}"
                        RenderTransformOrigin="0.5,0.5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.RenderTransform>
                            <ScaleTransform x:Name="ScaleTransform" ScaleX="1" ScaleY="1" />
                        </Grid.RenderTransform>
                        <ContentPresenter x:Name="ContentPresenter" Grid.Row="0" />
                        <Border
                            Grid.Row="0"
                            BorderBrush="{DynamicResource DefaultBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="16" />
                        <Border
                            x:Name="MainBorder"
                            Grid.Row="0"
                            Margin="-6"
                            BorderBrush="{DynamicResource PrimaryBrush}"
                            BorderThickness="4"
                            CornerRadius="20"
                            Visibility="Collapsed" />
                        <Grid Grid.Row="1" Margin="-64,24,-64,-64">
                            <TextBlock
                                x:Name="GameTitle"
                                MinWidth="{Binding ActualWidth, ElementName=ContentPresenter}"
                                HorizontalAlignment="Center"
                                FontSize="32"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource PrimaryBrush}"
                                LineHeight="28"
                                LineStackingStrategy="BlockLineHeight"
                                Text="{Binding DisplayName}"
                                TextAlignment="Left"
                                TextWrapping="Wrap"
                                Visibility="Hidden">
                                <TextBlock.Effect>
                                    <DropShadowEffect
                                        BlurRadius="16"
                                        Opacity="0.9"
                                        RenderingBias="Quality"
                                        ShadowDepth="0"
                                        Color="Black" />
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="MainBorder" Property="Visibility" Value="Visible" />
                            <Setter Property="Canvas.ZIndex" Value="90" />
                            <Trigger.ExitActions>
                                <BeginStoryboard Storyboard="{StaticResource FocusedOff}" />
                            </Trigger.ExitActions>
                            <Trigger.EnterActions>
                                <BeginStoryboard Storyboard="{StaticResource FocusedOn}" />
                            </Trigger.EnterActions>
                        </Trigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsFocused}" Value="True" />
                                <Condition Binding="{Settings Fullscreen.ShowGameTitles}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="GameTitle" Property="Visibility" Value="Visible" />
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
