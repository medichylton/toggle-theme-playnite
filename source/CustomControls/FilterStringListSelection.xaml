<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="{x:Type FilterStringListSelection}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type FilterStringListSelection}">
                    <DockPanel
                        x:Name="PART_MenuHost"
                        Width="{DynamicResource FilterPanelWidth}"
                        Background="{DynamicResource OverlayMenuBackgroundBrush}">
                        <ButtonEx
                            x:Name="PART_ButtonBack"
                            Margin="15,5,15,5"
                            BorderThickness="2"
                            DockPanel.Dock="Top">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center"
                                        FontFamily="{StaticResource FontIcoFont}"
                                        FontSize="20"
                                        Text="&#xeab5;" />
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="{DynamicResource FixedFontSize}"
                                        Text="{Binding Title}" />
                                </StackPanel>
                            </Button.Content>
                        </ButtonEx>

                        <ButtonEx
                            x:Name="PART_ButtonClear"
                            Margin="15,5,15,5"
                            BorderThickness="2"
                            Content="{DynamicResource LOCClearLabel}"
                            DockPanel.Dock="Top" />

                        <ItemsControlEx
                            x:Name="PART_ItemsHost"
                            DockPanel.Dock="Top"
                            Focusable="False"
                            KeyboardNavigation.DirectionalNavigation="Once" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
